<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_medication_bg"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/txtMedName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do medicamento"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/ozem_text_primary"
        android:paddingBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMedDose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dose: -"
            android:textSize="14sp"
            android:textColor="@color/ozem_text_secondary" />

        <TextView
            android:id="@+id/txtMedFrequency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Frequência: -"
            android:textSize="14sp"
            android:textColor="@color/ozem_text_secondary"
            android:gravity="end" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtMedNextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Próxima aplicação: -"
        android:textSize="14sp"
        android:textColor="@color/ozem_text_secondary"
        android:paddingTop="4dp" />

</LinearLayout>
