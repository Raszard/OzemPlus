<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ozem_background"
    tools:context=".MedicationListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="←"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/ozem_text_primary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMedListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seus Medicamentos"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/ozem_text_primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gerencie doses e frequências"
                android:textSize="14sp"
                android:textColor="@color/ozem_text_secondary"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtMedListEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Nenhum medicamento cadastrado.\nToque abaixo para começar."
        android:textSize="16sp"
        android:textColor="@color/ozem_text_secondary"
        android:gravity="center"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMedList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/ozem_background">

        <Button
            android:id="@+id/btnAddMedList"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Adicionar Novo Medicamento"
            android:textSize="16sp"
            android:backgroundTint="@color/ozem_primary"
            app:cornerRadius="30dp"
            android:textColor="@color/white"
            android:elevation="4dp"/>
    </LinearLayout>

</LinearLayout>