<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ozem_background"
    tools:context=".MedicationListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/white"
        android:elevation="4dp">

        <TextView
            android:id="@+id/txtMedListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seus Medicamentos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/ozem_text_primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerencie doses e frequências"
            android:textSize="14sp"
            android:textColor="@color/ozem_text_secondary"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtMedListEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Nenhum medicamento cadastrado.\nToque abaixo para começar."
        android:textSize="16sp"
        android:textColor="@color/ozem_text_secondary"
        android:gravity="center"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMedList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/ozem_background">

        <Button
            android:id="@+id/btnAddMedList"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Adicionar Novo Medicamento"
            android:textSize="16sp"
            android:backgroundTint="@color/ozem_primary"
            app:cornerRadius="30dp"
            android:textColor="@color/white"
            android:elevation="4dp"/>
    </LinearLayout>

</LinearLayout>