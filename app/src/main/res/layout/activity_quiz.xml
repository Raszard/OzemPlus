<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtQuizTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seu perfil GLP-1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/txtQuizSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vamos montar um plano básico usando algumas informações suas. Você pode editar depois."
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <!-- Nome -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Como podemos te chamar?"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: Ana"
            android:inputType="textPersonName"
            android:paddingBottom="12dp" />

        <!-- Peso atual -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qual é o seu peso atual (kg)?"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/edtCurrentWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 85.0"
            android:inputType="numberDecimal"
            android:paddingBottom="12dp" />

        <!-- Peso meta -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qual é o seu peso objetivo (kg)?"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/edtTargetWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 72.0"
            android:inputType="numberDecimal"
            android:paddingBottom="12dp" />

        <!-- Objetivo principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qual é o seu foco principal?"
            android:paddingBottom="4dp" />

        <RadioGroup
            android:id="@+id/rgGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbGoalWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perda de peso" />

            <RadioButton
                android:id="@+id/rbGoalGlycemic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Controle glicêmico" />

            <RadioButton
                android:id="@+id/rbGoalBoth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambos" />
        </RadioGroup>

        <!-- Atividade diária -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nível de atividade diária:"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spActivityLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Meta de água -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meta diária de água:"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spWaterGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnQuizContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
