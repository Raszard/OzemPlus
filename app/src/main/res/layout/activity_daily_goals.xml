<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ozem_background"
    android:fillViewport="true"
    tools:context=".DailyGoalsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/text_arrow_back"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/ozem_text_primary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtDailyGoalsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goals_header_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/ozem_text_primary"/>
                <TextView
                    android:id="@+id/txtDailyGoalsSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goals_header_subtitle"
                    android:textSize="14sp"
                    android:textColor="@color/ozem_text_secondary"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/ozem_card_stroke"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:text="@string/goals_label_hydration"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/ozem_text_primary"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/btnCalcWater"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goals_btn_calc_ideal"
                        android:textColor="@color/ozem_accent"
                        android:textSize="12sp"
                        android:padding="0dp"
                        android:minHeight="0dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp">
                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressWater"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:indicatorSize="80dp"
                            app:trackThickness="8dp"
                            app:trackCornerRadius="4dp"
                            app:indicatorColor="#2196F3"
                            app:trackColor="#E3F2FD"
                            android:progress="50" />
                        <TextView
                            android:id="@+id/txtWaterPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/goals_val_50_percent"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#2196F3"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/goals_label_daily_goal"
                            android:textColor="@color/ozem_text_secondary"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom">
                            <EditText
                                android:id="@+id/edtWaterGoal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:hint="@string/goals_hint_water_default"
                                android:background="@null"
                                android:minWidth="60dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginBottom="4dp"
                                android:text="@string/goals_unit_ml"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtWaterProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/goals_text_ingested_default"
                            android:textSize="14sp"
                            android:textColor="@color/ozem_text_primary"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnAddWater200"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_goals_btn_add_200ml"
                        android:layout_marginEnd="8dp"/>
                    <Button
                        android:id="@+id/btnAddWater50"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_goals_btn_add_50ml"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/ozem_card_stroke"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/goals_label_activity"
                    android:textColor="@color/ozem_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp">
                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressExercise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:indicatorSize="80dp"
                            app:trackThickness="8dp"
                            app:trackCornerRadius="4dp"
                            app:indicatorColor="#FF9800"
                            app:trackColor="#FFF3E0"
                            android:progress="0" />
                        <TextView
                            android:id="@+id/txtExercisePercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/goals_val_0_percent"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#FF9800"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/goals_label_meta_min"
                            android:textColor="@color/ozem_text_secondary"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/edtExerciseGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:hint="@string/goals_hint_exercise_default"
                            android:background="@null"
                            android:minWidth="60dp"/>

                        <TextView
                            android:id="@+id/txtExerciseProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/goals_text_exercise_default"
                            android:textSize="14sp"
                            android:textColor="@color/ozem_text_primary"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnAdd5Min"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_goals_btn_add_5min"
                        android:layout_marginEnd="8dp"/>
                    <Button
                        android:id="@+id/btnAdd10Min"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_goals_btn_add_10min"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/ozem_card_stroke"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="@string/goals_label_reminder"
                            android:textStyle="bold"
                            android:textColor="@color/ozem_text_primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="@string/goals_desc_reminder"
                            android:textSize="12sp"
                            android:textColor="@color/ozem_text_secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <Switch
                        android:id="@+id/switchDailyReminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerTimePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_button_ghost"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/ozem_primary"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/txtSelectedTime"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        tools:text="@string/goals_val_time_default"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/ozem_text_primary"/>

                    <TextView
                        android:text="@string/goals_btn_change_time"
                        android:textColor="@color/ozem_primary"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btnSaveTargets"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/goals_btn_save_changes"
            android:backgroundTint="@color/ozem_primary"
            app:cornerRadius="30dp"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>
</ScrollView>