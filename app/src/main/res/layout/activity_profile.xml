<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ozem_background"
    android:fillViewport="true"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/text_arrow_back"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/ozem_text_primary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtProfileTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configurações"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/ozem_text_primary"/>
                <TextView
                    android:id="@+id/txtProfileSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gerencie suas preferências"
                    android:textSize="14sp"
                    android:textColor="@color/ozem_text_secondary"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/ozem_card_stroke"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="Geral"
                    android:textColor="@color/ozem_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="48dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Modo Noturno"
                        android:textColor="@color/ozem_text_primary"
                        android:textSize="16sp"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchDarkMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ozem_card_stroke"
                    android:layout_marginVertical="12dp"/>

                <LinearLayout
                    android:id="@+id/btnChangeLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:minHeight="48dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Idioma"
                        android:textColor="@color/ozem_text_primary"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/txtCurrentLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Português"
                        android:textColor="@color/ozem_text_secondary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ›"
                        android:textSize="20sp"
                        android:textColor="@color/ozem_text_secondary"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/ozem_card_stroke"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="Correção de Registros"
                    android:textColor="@color/ozem_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Desfazer o último lançamento em caso de erro."
                    android:textColor="@color/ozem_text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnUndoWeight"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Desfazer último Peso"
                    android:textAllCaps="false"
                    android:textColor="@color/ozem_text_primary"
                    app:strokeColor="@color/ozem_card_stroke"/>

                <Button
                    android:id="@+id/btnUndoInjection"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:text="Desfazer última Injeção"
                    android:textAllCaps="false"
                    android:textColor="@color/ozem_text_primary"
                    app:strokeColor="@color/ozem_card_stroke"/>

                <Button
                    android:id="@+id/btnUndoSymptom"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:text="Desfazer último Sintoma"
                    android:textAllCaps="false"
                    android:textColor="@color/ozem_text_primary"
                    app:strokeColor="@color/ozem_card_stroke"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/ozem_card_stroke"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="Conta"
                    android:textColor="@color/ozem_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnGetPro"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Obter Versão PRO"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/ozem_primary"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/btnAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sobre o Aplicativo"
                    android:textColor="@color/ozem_text_primary"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:background="?attr/selectableItemBackground"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ozem_card_stroke"
                    android:layout_marginVertical="4dp"/>

                <TextView
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sair da Conta"
                    android:textColor="#D32F2F"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:visibility="visible"
                    android:background="?attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/btnLoginGoogle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrar com Google"
                    android:textColor="@color/ozem_primary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>