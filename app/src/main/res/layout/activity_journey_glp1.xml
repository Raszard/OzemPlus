<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ozem_background"
    android:fillViewport="true"
    tools:context=".JourneyGlp1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="â†"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/ozem_text_primary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/txtJourneyTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Minha Jornada GLP-1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/ozem_text_primary"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/txtDaysBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pill_badge_bg"
                android:backgroundTint="@color/ozem_primary"
                android:text="-- dias"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textSize="12sp" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="280dp"
                    android:layout_weight="1.2">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardImageContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#F3F4F6"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/imgLastPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_camera"
                            app:tint="#9CA3AF" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnCamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:src="@drawable/ic_camera"
                        app:backgroundTint="@color/ozem_primary"
                        app:fabSize="mini"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/white" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_surface_rounded"
                        android:backgroundTint="#F8FAFC"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DATA"
                            android:textColor="@color/ozem_text_secondary"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtInfoDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/ozem_text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_surface_rounded"
                        android:backgroundTint="#F8FAFC"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="IMC"
                            android:textColor="@color/ozem_text_secondary"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtInfoBmi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/ozem_text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_surface_rounded"
                        android:backgroundTint="#F0FDF4"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PESO"
                            android:textColor="@color/ozem_text_secondary"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtInfoWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--kg"
                            android:textColor="@color/ozem_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_surface_rounded"
                        android:backgroundTint="#F8FAFC"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DIFERENÃ‡A"
                            android:textColor="@color/ozem_text_secondary"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtInfoDiff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--kg"
                            android:textColor="#059669"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ãšltimos Sintomas"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:text="ðŸ¤¢ NÃ¡usea"
                            android:textStyle="bold"
                            android:textColor="@color/ozem_text_primary"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/txtNauseaScore"
                            android:text="0/5"
                            android:textStyle="bold"
                            android:textColor="@color/ozem_text_secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressNausea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:trackCornerRadius="4dp"
                        app:indicatorColor="@color/ozem_accent"
                        app:trackColor="#F1F5F9"
                        app:trackThickness="6dp"
                        android:max="5"
                        android:progress="0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:text="ðŸ˜´ Fadiga"
                            android:textStyle="bold"
                            android:textColor="@color/ozem_text_primary"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/txtFatigueScore"
                            android:text="0/5"
                            android:textStyle="bold"
                            android:textColor="@color/ozem_text_secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressFatigue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:trackCornerRadius="4dp"
                        app:indicatorColor="@color/ozem_primary"
                        app:trackColor="#F1F5F9"
                        app:trackThickness="6dp"
                        android:max="5"
                        android:progress="0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:text="ðŸ½ï¸ Saciedade"
                            android:textStyle="bold"
                            android:textColor="@color/ozem_text_primary"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/txtSatietyScore"
                            android:text="0/5"
                            android:textStyle="bold"
                            android:textColor="@color/ozem_text_secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressSatiety"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:trackCornerRadius="4dp"
                        app:indicatorColor="@color/ozem_primary_dark"
                        app:trackColor="#F1F5F9"
                        app:trackThickness="6dp"
                        android:max="5"
                        android:progress="0"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EvoluÃ§Ã£o de Peso"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/ozem_card_stroke"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:padding="8dp"
                android:orientation="vertical">
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chartWeight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>