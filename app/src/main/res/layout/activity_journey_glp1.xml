<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ozem_background"
    android:fillViewport="true"
    tools:context=".JourneyGlp1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="â†"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/ozem_text_primary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/txtJourneyTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Minha Jornada"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/ozem_text_primary"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/txtDaysBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pill_badge_bg"
                android:backgroundTint="@color/ozem_primary"
                android:text="-- dias"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textSize="12sp" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:layout_marginBottom="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="InÃ­cio"
                        android:textSize="12sp"
                        android:textColor="@color/ozem_text_secondary"/>
                    <TextView
                        android:id="@+id/txtInfoDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/ozem_text_primary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IMC Atual"
                        android:textSize="12sp"
                        android:textColor="@color/ozem_text_secondary"/>
                    <TextView
                        android:id="@+id/txtInfoBmi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/ozem_text_primary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="4dp"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Peso Atual"
                            android:textSize="12sp"
                            android:textColor="@color/ozem_text_secondary"/>
                        <TextView
                            android:id="@+id/txtInfoWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- kg"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/ozem_text_primary"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtInfoDiff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- kg"
                        android:textColor="#2E7D32"
                        android:background="#E8F5E9"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>

        <Button
            android:id="@+id/btnUpdateWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atualizar Peso"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@color/ozem_primary"
            app:strokeColor="@color/ozem_primary"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EvoluÃ§Ã£o"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/ozem_card_stroke"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:padding="8dp"
                android:orientation="vertical">
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chartWeight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/cardPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_surface_rounded"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_camera"
                    app:tint="@color/ozem_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Registro Visual"
                    android:textStyle="bold"
                    android:textColor="@color/ozem_dark"
                    android:textSize="16sp" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/llPhotoGalleryContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/btnCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_ghost"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:text="Adicionar Foto"
                android:textColor="@color/ozem_primary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sintomas Recentes"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/item_medication_bg"
                android:padding="12dp"
                android:layout_marginEnd="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¤¢"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txtNauseaScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/5"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NÃ¡usea"
                    android:textSize="10sp"
                    android:textColor="@color/ozem_text_secondary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/item_medication_bg"
                android:padding="12dp"
                android:layout_marginHorizontal="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜´"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txtFatigueScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/5"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fadiga"
                    android:textSize="10sp"
                    android:textColor="@color/ozem_text_secondary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/item_medication_bg"
                android:padding="12dp"
                android:layout_marginStart="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ½ï¸"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txtSatietyScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4/5"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saciedade"
                    android:textSize="10sp"
                    android:textColor="@color/ozem_text_secondary"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>