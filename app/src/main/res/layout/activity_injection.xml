<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ozem_background"
    tools:context=".InjectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="←"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/ozem_text_primary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/txtInjectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nova Aplicação"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/ozem_text_primary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_medication_bg"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicamento"
                android:textSize="14sp"
                android:textColor="@color/ozem_text_secondary"/>

            <Spinner
                android:id="@+id/spInjectionMed"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ozem_card_stroke"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local da Aplicação"
                android:textSize="14sp"
                android:textColor="@color/ozem_text_secondary"
                android:layout_marginBottom="12dp"/>

            <ImageView
                android:id="@+id/imgBodyDiagram"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter"
                android:alpha="0.8"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/txtInjectionDiagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sugestão: Abdômen"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="@color/ozem_accent"
                android:layout_marginBottom="16dp"/>

            <RadioGroup
                android:id="@+id/rgLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rbAbdomen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abdômen"
                    android:layout_marginEnd="8dp"/>

                <RadioButton
                    android:id="@+id/rbThigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coxa"
                    android:layout_marginEnd="8dp"/>

                <RadioButton
                    android:id="@+id/rbArm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Braço" />
            </RadioGroup>

            <Button
                android:id="@+id/btnConfirmInjection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmar Aplicação"
                android:backgroundTint="@color/ozem_primary"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                app:cornerRadius="8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtLastInjectionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Última: -"
            android:textSize="14sp"
            android:textColor="@color/ozem_text_secondary"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/txtNextSuggestionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sugestão: -"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/ozem_primary"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/txtInjectionHistoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Histórico Recente"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/ozem_text_primary"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerInjections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnExportInjectionHistory"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exportar Histórico"
            android:textColor="@color/ozem_text_secondary"
            android:layout_marginBottom="20dp"/>

        <TextView android:id="@+id/txtInjectionSubtitle" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
        <TextView android:id="@+id/txtInjectionDiagramTitle" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>

    </LinearLayout>
</ScrollView>