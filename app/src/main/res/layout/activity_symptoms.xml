<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SymptomsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtSymptomsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/symptoms_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/txtSymptomsSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/symptoms_subtitle"
            android:textSize="14sp"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/txtIntensityHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/symptoms_intensity_hint"
            android:textSize="12sp"
            android:paddingBottom="12dp" />

        <!-- Náusea -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/symptoms_nausea_label"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spNausea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Cansaço -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/symptoms_fatigue_label"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spFatigue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Saciedade -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/symptoms_satiety_label"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spSatiety"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Notas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notas:"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/edtSymptomNotes"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top|start"
            android:hint="@string/symptoms_notes_hint"
            android:inputType="textMultiLine"
            android:background="@android:drawable/edit_text"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnSaveSymptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/symptoms_btn_save"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/txtSymptomsHistoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/symptoms_history_title"
            android:textStyle="bold"
            android:paddingTop="24dp"
            android:paddingBottom="4dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSymptoms"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/btnExportSymptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/symptoms_btn_export"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
